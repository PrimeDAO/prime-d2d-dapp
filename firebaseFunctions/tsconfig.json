{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es2019",
    "lib": [
      "ESNext",
    ],
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "lib",
  },
  "include": [
    "src",
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
