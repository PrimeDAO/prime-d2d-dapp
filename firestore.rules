rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /deals/{deal} {
      allow read: if !resource.data.registrationData.private || request.auth.uid == resource.data.registrationData.proposalLead.address;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.registrationData.proposalLead.address;
    }
    
    match /deals/{deal}/votes/{representative} {
    	allow read: if request.auth != null;
      allow create: if request.auth != null;
    	allow update: if request.auth.uid == resource.id;
    }

    match /test/{item} {
      allow read, create: if true; 
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}