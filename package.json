{
  "name": "@primedao/prime-deals-dapp",
  "version": "1.0.0",
  "description": "The PrimeDAOâ€™s Home for DAO to DAO Deals",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrimeDAO/prime-deals-dapp"
  },
  "author": "CL Cybernetix GmbH",
  "homepage": "./",
  "license": "MIT",
  "dependencies": {
    "aurelia": "latest"
  },
  "devDependencies": {
    "eslint": "^8.12.0",
    "@aurelia/testing": "latest",
    "htmlhint": "^1.1.3",
    "sass-lint": "^1.13.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "html-webpack-plugin": "^5.5.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "style-loader": "^3.3.1",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^7.1.0",
    "@aurelia/webpack-loader": "latest",
    "ts-loader": "^9.2.8",
    "sass-loader": "^12.6.0",
    "sass": "^1.49.11",
    "postcss-loader": "^6.2.1",
    "postcss": "^8.4.12",
    "autoprefixer": "^10.4.4",
    "@types/node": "^17.0.23",
    "typescript": "^4.6.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "jest": "^27.5.1",
    "jest-transform-stub": "^2.0.0",
    "@types/jest": "^27.4.1",
    "@aurelia/ts-jest": "latest",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.3",
    "eslint-plugin-cypress": "^2.12.1",
    "start-server-and-test": "^1.14.0"
  },
  "scripts": {
    "lint:js": "eslint src test cypress --ext .js,.ts",
    "lint:css": "sass-lint -c .sass-lint.yml \"src/**/*.scss\"",
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "pretest": "npm run lint",
    "start": "webpack serve",
    "build": "rimraf dist && webpack --env production",
    "analyze": "rimraf dist && webpack --env production --analyze",
    "test": "jest",
    "cypress": "cypress run",
    "test:e2e": "cross-env CI=1 start-server-and-test start http://localhost:9000 cypress"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": [
        "@aurelia/ts-jest",
        {
          "useCSSModule": true
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": [
      "cypress/integration/[filepath]/**/*.{js,ts}",
      "cypress/integration/[filepath].{js,ts}",
      "cypress/integration/**/*.{js,ts}",
      "cypress/integration/common/**/*.{js,ts}"
    ]
  }
}
