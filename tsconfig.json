{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2019",
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "src",
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "allowJs": true,
  },
  "include": [
    "src",
    "test",
    "firebaseFunctions/src"
  ],
  "exclude": [
    "test/coverage-jest"
  ],
  "files": [
    "src/resource.d.ts"
  ]
}
